<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:background="@color/cricket"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_frame_2070"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cricket Exchange"
            android:textColor="#FCFCFC"
            android:textSize="18dp"
            android:fontFamily="@font/rajdhani"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"/>



    </androidx.appcompat.widget.LinearLayoutCompat>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"

        style="@style/Widget.MaterialComponents.TabLayout.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="#FCFCFC"
        app:tabIndicatorColor="#FF7575"
        app:tabSelectedTextColor="#FCFCFC"
        app:tabTextAppearance="@style/tab_text"



        />
  <!--
    <View
        android:id="@+id/line_820"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_820"
        android:alpha="0.06"
        />
        -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/mypager"
        android:layout_width="match_parent"
        android:background="@color/cricket"
        android:layout_height="match_parent"
        />


</LinearLayout>