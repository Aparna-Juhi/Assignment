<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- match card bg -->
    <View
        android:id="@+id/match_card"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_match_card_bg"
        />

    <!-- all matches text -->
    <TextView
        android:id="@+id/all_matches_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_matches_text"
        app:layout_constraintStart_toStartOf="@id/match_card"
        app:layout_constraintTop_toTopOf="@id/match_card"
        app:layout_constraintBottom_toBottomOf="@id/match_card"
        android:textAppearance="@style/all_upcoming_matches_text"
        android:layout_marginLeft="16dp"
        />

    <!-- arrow -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arrow_right"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="@id/match_card"
        app:layout_constraintTop_toTopOf="@id/match_card"
        app:layout_constraintBottom_toBottomOf="@id/match_card"
        android:textAppearance="@style/all_upcoming_matches_text"
        />

</androidx.constraintlayout.widget.ConstraintLayout>